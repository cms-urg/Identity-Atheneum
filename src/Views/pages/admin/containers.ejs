<%- include('../../partials/header.ejs', {
title: "Containers - Admin Dashboard"
}) %>

<div class="container">
    <br/>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="<%= getRealUrl('/admin') %>">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Containers</li>
        </ol>
    </nav>

    <h2>Manage Containers</h2>

    <% include ../../partials/errors.ejs %>
    <% include ../../partials/successes.ejs %>

    <a href="<%= getRealUrl("/admin/containers/create_container") %>" class="btn btn-primary">
        Create New Container
    </a>

    <hr/>

    <% for(let i = 0; i < containers.length; i++){ %>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="card-title"><%=containers[i].name%></h5>
                    <a href="<%=getRealUrl('/admin/containers/detail/' + containers[i].name)%>" class="btn btn-primary">View</a><br/><br/>
                </div>
                <div class="col-md-6">
                    <b>Read: </b><code><%=containers[i].readGroups%></code><br/>
                    <b>Write: </b><code><%=containers[i].writeGroups%></code><br/>
                    <b>Delete: </b><code><%=containers[i].deleteGroups%></code><br/>
                </div>
                <div class="col-md-12">
                    <small class="text-muted">Created At <%=containers[i].createdAt%></small>
                </div>
            </div>
        </div>
    </div>
    <br/>
    <% } %>

    <% include ../../partials/footer.ejs %>
</div>
